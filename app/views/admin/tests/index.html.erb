<div class="row justify-content-center mb-3">
  <div class="col col-md-10 col-lg-8 table-responsive">
    <h1 class="pt-3 pb-3 heading"><%= t('.header') %>
      <span class="float-right">
        <%= button_to t('.link_to_gists'), admin_gists_path, method: :get, class: 'btn btn-small btn-outline-info' %>
      </span>
    </h1>
    <p>
      | <%= link_to t('.create_test'), new_admin_test_path %> |
    </p>
    <table class="table table-striped table-borderless table-hover ">
      <tr class="thead-dark">
        <th scope="col"><%= t('.id') %></th>
        <th scope="col"><%= t('.title') %></th>
        <th scope="col"><%= t('.level') %></th>
        <th scope="col"><%= t('.category') %></th>
        <th scope="col"><%= t('.count_questions') %></th>
        <th colspan="3"><%= t('.actions') %></th>
      </tr>
      <%= render @tests %>
    </table>
  </div>
</div>

