<% if user_signed_in? %>
  <p class="welcome">
    Welcome, <%= current_user.email %> <%= current_user.first_name %> Guru
  </p>
  <p>
    | <%= link_to 'Log Out', destroy_user_session_path, method: :delete %> |
  </p>
<% else %>
  <p>
    | <%= link_to 'Sign Up', new_user_password_path %> | <%= link_to 'Log In', new_user_session_path %> |
  </p>
<% end %>
