<h1>All Tests</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Level</th>
    <th>Category</th>
    <th>Count Questions</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.id %></td>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.category.title %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to 'Show', test_path(test) %></td>
      <td><%= link_to 'Edit', edit_test_path(test) %></td>
      <td><%= link_to 'Delete', test_path(test), method: :delete, date: {confirm: "Are your sure?"} %></td>
    </tr>
  <% end %>
</table>
<p>
  | <%= link_to 'Создать новый тест', new_test_path %> |
</p>
