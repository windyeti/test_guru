<% if @test.errors.present? %>
  <h3>Errors</h3>
  <ul>
    <% @test.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @test, local: true) do |f| %>
  <p>
    <%= f.label(:title) %>
    <%= f.text_field(:title) %>
  </p>
  <p>
    <%= f.label(:level) %>
    <%= f.number_field(:level) %>
  </p>
  <p>
    <%= f.label(:category_id) %>
    <%= f.collection_select(:category_id, Category.all, :id, :title, prompt: true) %>
  </p>
<!--  <p>-->
    <%#= f.label(:user_id) %>
    <%#= f.collection_select(:user_id, User.all, :id, :name, prompt: true) %>
<!--  </p>-->
  <p>
    <%= f.submit %>
  </p>
<% end %>
