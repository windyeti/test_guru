<div class="row justify-content-center pt-3 mb-3">
  <div class="col-12 col-md-10 col-lg-8">
    <div class="card">
      <h1 class="card-header"><%= t('.feedback') %></h1>
      <div class="card-body">
        <%= form_tag feedbacks_path do %>
          <div class="form-group">
            <%= label_tag(:subject, t('.title')) %>
            <%= text_field_tag(:subject, nil, class: 'form-control') %>
          </div>
          <div class="form-group">
            <%= label_tag(:body, t('.message')) %>
            <%= text_area_tag(:body, nil, class: 'form-control') %>
          </div>
          <%= submit_tag("Отправить", class: 'btn btn-primary') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
