<div class="row justify-content-center pt-3 mb-3">
  <div class="col-12 col-md-10 col-lg-8">
    <div class="card">
      <h1 class="card-header"><%= t('.feedback') %></h1>
      <div class="card-body">
        <%= render partial: 'shared/errors', locals: { resources: @feedback } %>
        <%= form_with(model: @feedback, url: feedbacks_path, local: true) do |f| %>
          <div class="form-group">
            <%= f.label(:subject, t('.subject')) %>
            <%= f.text_field(:subject, class: 'form-control') %>
          </div>
          <div class="form-group">
            <%= f.label(:email, t('.email')) %>
            <%= f.text_field(:email, class: 'form-control') %>
          </div>
          <div class="form-group">
            <%= f.label(:body, t('.message')) %>
            <%= f.text_area(:body, class: 'form-control') %>
          </div>
          <%= f.submit(t('.submit'), class: 'btn btn-primary') %>
        <% end %>
      </div>
    </div>
  </div>
</div>

