<h1>Passage in the <%= @test_passage.test.title %></h1>
<p>
  Вопрос: <%= @test_passage.current_question.body %>
</p>
<p>
  вопрос №<%= number_question(@test_passage.current_question) %> из <%= @test_passage.test.questions.count %>
</p>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form|%>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |c| %>
    <p>
      <%= c.check_box id: "answer_ids_#{c.object.id}" %>
      <%= c.label %>
    </p>
  <% end %>
  <%= form.submit %>
<% end %>
